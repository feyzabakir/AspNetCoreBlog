@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori Listesi</h1>
<br />
<table class="table table-bordered">
    <thead>
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Pasif Yap</th>
        <th>Aktif Yap</th>
        <th>Düzenle</th>
    </tr>
    </thead>
   
    @foreach(var item in Model)
    {
        <tbody>
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
                <td><a href="/Admin/Category/CategoryDelete/@item.CategoryID" class="btn btn-danger" id="DeleteBtn"
                    onclick="return confirm('Silmel isrediğnize emin misiniz?');">Pasif Yap</a></td>
            <td><a href="#" class="btn btn-warning">Aktif Yap</a></td>
            <td><a href="#" class="btn btn-success">Düzenle</a></td>
        </tr>
        </tbody>
    }
</table>
<a href="/Admin/Category/CategoryAdd/" class="btn btn-primary">Yeni Kategori</a>
<br /><br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}))

